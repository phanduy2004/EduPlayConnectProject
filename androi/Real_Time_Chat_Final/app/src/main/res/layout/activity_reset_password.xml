<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imgBackOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrowback"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:tint="#0A84FF"
        android:src="@drawable/baseline_lock_open_24"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Đổi Mật Khẩu"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nhập mật khẩu mới gì chưa người đẹp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/customedt"
        android:hint="Nhập mật khẩu mới"
        android:paddingLeft="16dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:paddingRight="16dp"
        android:inputType="textPassword"
        android:drawablePadding="16dp"
        android:textColorHint="@color/black"/>
    <EditText
        android:id="@+id/confirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/customedt"
        android:inputType="textPassword"
        android:hint="Xác nhận mật khẩu mới"
        android:paddingLeft="16dp"
        android:drawableLeft="@drawable/baseline_lock_open_24"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:paddingRight="16dp"
        android:drawablePadding="16dp"
        android:textColorHint="@color/black"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/white"
        android:text="Xác nhận"
        android:background="@drawable/coner_circle"
        android:backgroundTint="#0A84FF"/>
    <TextView
        android:id="@+id/textExit"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Thoát"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textColor="#0A84FF"
        android:textStyle="bold"
        android:gravity="bottom|center"
        />
</LinearLayout>