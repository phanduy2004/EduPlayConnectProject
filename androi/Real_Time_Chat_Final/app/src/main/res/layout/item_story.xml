<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Hình ảnh Story -->
        <FrameLayout
            android:id="@+id/story_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                tools:ignore="ContentDescription" />

            <!-- Viền cho hình ảnh Story -->
            <ImageView
                android:id="@+id/story_image_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/story_border"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- Avatar và viền cho Story của bạn bè -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/story_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/story_border"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/story_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- Nút "Create Story" -->
        <LinearLayout
            android:id="@+id/create_story_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Create Story"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tên người dùng (cho Story của bạn bè) -->
        <TextView
            android:id="@+id/story_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="8dp"
            android:background="#80000000"
            android:padding="4dp"
            android:text="Friend's Story"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>
</androidx.cardview.widget.CardView>